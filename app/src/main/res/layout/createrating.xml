<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/AliceBlue"
    android:padding="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="External Factors :" />
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accessibility Parking Space : " />
    <Spinner
        android:id="@+id/RS1"
        android:layout_width="250dp"
        android:layout_height="50dp"

        />
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Automatic opening gates :" />
    <Spinner
        android:id="@+id/RS2"
        android:layout_width="250dp"
        android:layout_height="50dp"

        />
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Outer slopes  :" />
    <Spinner
        android:id="@+id/RS3"
        android:layout_width="250dp"
        android:layout_height="50dp"

        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Internal Factors :" />
    <TextView
        android:gravity="center"
        android:textSize="15sp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accessible toilets :" />
    <Spinner
        android:id="@+id/RS4"
        android:layout_width="250dp"
        android:layout_height="50dp"

        />
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elevators :" />
    <Spinner
        android:id="@+id/RS5"
        android:layout_width="250dp"
        android:layout_height="50dp"

        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Complementary Factors :" />
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wheelchair accessible tables and chairs :" />
    <Spinner
        android:id="@+id/RS6"
        android:layout_width="250dp"
        android:layout_height="50dp"

        />
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stairs railings :" />
    <Spinner
        android:id="@+id/RS7"
        android:layout_width="250dp"
        android:layout_height="50dp"

        />
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wheelchair accessibility Signs :" />
    <Spinner
        android:id="@+id/RS8"
        android:layout_width="250dp"
        android:layout_height="50dp"

        />
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hallway Railings" />
    <Spinner
        android:id="@+id/RS9"
        android:layout_width="250dp"
        android:layout_height="50dp"
         android:autofillHints="Select Rating"
        />


    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/Overall"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="60dp"
         />

    <Button
        android:id="@+id/showscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Overall"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/SendRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
        android:text="Send Rating"
        android:textAllCaps="false" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>
</ScrollView>