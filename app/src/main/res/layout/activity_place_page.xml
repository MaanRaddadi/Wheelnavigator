<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white"
    tools:context=".PlacePagePackage.PlacePage">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="710dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/AliceBlue">


        <TextView
            android:id="@+id/PagePlaceName"
            android:layout_width="123dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/PagePlaceLogo"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/PagePlaceLogo"
            android:layout_width="111dp"
            android:layout_height="106dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_baseline_image_24" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/PicRecyclerview"
            android:layout_width="381dp"
            android:layout_height="273dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="147dp"
            android:scrollbars="horizontal" />

        <Button
            android:id="@+id/WriteFeedBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="0dp"
            android:text="Write a Feedback"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/ApplicationRatingIcon"
            android:layout_width="88dp"
            android:layout_height="86dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/ic_baseline_accessible_24_default" />

        <RatingBar
            android:id="@+id/ratingBar"

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="-24dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="80dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.57"
            android:scaleX="0.5"
            android:scaleY="0.5"

            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/RatingValue"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="48dp"
            android:text="4.56"
            android:textSize="15sp" />

        <Button
            android:id="@+id/ViewFeedbacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="83dp"
            android:text="View feedbacks"
            android:textAllCaps="false" />

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="6dp"
            android:layout_width="362dp"
            android:layout_height="117dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginBottom="150dp"
            android:background="@drawable/border">

            <RelativeLayout
                android:layout_width="361dp"
                android:layout_height="match_parent" >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Services Details : " />

                <TextView
                    android:id="@+id/ServicesDetails"
                    android:layout_width="347dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="6dp"
                    android:text="" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


