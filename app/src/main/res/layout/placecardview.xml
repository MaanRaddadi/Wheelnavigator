<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
   app:cardCornerRadius="6dp"
    android:elevation="6dp"
    android:id="@+id/PlaceCard"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="15dp"
     >

        <ImageView
            android:id="@+id/PlaceLogo"
            android:layout_width="109dp"
            android:layout_height="86dp"
            android:layout_marginTop="2dp"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/CardPlacename"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/PlaceLogo"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DistanceFromCurrent"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/CardPlacename"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/PlaceLogo"
            android:text="TextView"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ApplicationRating"
            android:layout_width="83dp"
            android:layout_height="94dp"


            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"


            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            app:srcCompat="@drawable/ic_baseline_accessible_24_yellew" />


    </RelativeLayout>
    </androidx.cardview.widget.CardView>
