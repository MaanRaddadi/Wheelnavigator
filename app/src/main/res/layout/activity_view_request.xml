<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewRequest">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="352dp"
        android:layout_height="41dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/CornflowerBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="148dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Place name:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PlaceName"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        android:layout_marginLeft="50dp"
            android:text="TextView"
            android:textStyle="bold"

            android:textSize="20dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="352dp"
        android:layout_height="41dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        app:cardBackgroundColor="@color/CornflowerBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="148dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Telephone Number:"
            android:textSize="15dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/PlaceTelephone"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="TextView"
            android:textSize="20dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="352dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        app:cardBackgroundColor="@color/CornflowerBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="148dp"
            android:layout_height="54dp"
            android:text="Commercial Registration Number :"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/PlaceCrn"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:text="TextView"
            android:textSize="20dp"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="352dp"

        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/CornflowerBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="148dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Email:"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/PlaceEmail"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="TextView"
            android:textSize="20dp"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="354dp"
        android:layout_height="222dp"

        android:layout_marginStart="33dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@color/CornflowerBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="148dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:text="Services Details :"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="275dp" />


        <TextView
            android:id="@+id/DescriptionOfServices"
            android:layout_width="345dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:text="TextView"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>